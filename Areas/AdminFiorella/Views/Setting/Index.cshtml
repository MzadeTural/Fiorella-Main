
@{
    ViewData["Title"] = "Index";
}

@model TablesVM

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category Table</h4>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>

                            <th style="align-items:center"> Image</th>
                            <th> Settings</th>
                            <th>Parametr</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var stg in Model.Settings)
                        {
                            <tr>
                                <td>
                                  @stg.Key
                                </td>
                                <td>
                                  
                                    @stg.Value
                                </td>
                                <td>
                                    <form asp-action="Delete" method="post" class="d-inline">
                                        
                                        <button id="complexConfirm" asp-action="Delete" asp-route-id="@stg.Id" type="submit" class="btn btn-danger me-2 " onclick="return confirm('Are you sure you want to delete this item?')"><i class="mdi mdi-trash-can"></i></button>

                                    </form>

                                    <a asp-action="Update" type="submit" title="Edit" class="btn btn-success me-2" asp-route-id="@stg.Id">
                                        <i class="mdi mdi-content-save-edit"></i>
                                    </a>
                                    <button type="submit" class="btn btn-primary me-2"><i class="mdi mdi-information"></i></button>

                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


