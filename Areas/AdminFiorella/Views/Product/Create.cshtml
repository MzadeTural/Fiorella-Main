@model Product

@{
    ViewData["Title"] = "Create";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Default form</h4>
            <p class="card-description">
                Basic form layout
            </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label >Title</label>
                    <input asp-for="Title" class="form-control" id="exampleInputUsername1" placeholder="Title">
                </div>
                <div class="form-group">
                    <label >Image</label>
                    <input  asp-for="Images" type="file" class="form-control" id="exampleInputEmail1" placeholder="Image">
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" id="exampleInputPassword1" placeholder="Price">
                </div>
                <div class="form-group">
                    <label>Category </label>
                    <input asp-for="CategoryName" class="form-control" id="exampleInputConfirmPassword1" placeholder="Category">
                    <select class="data-list-input" style="width:190px;">
                    <option value="Chrome"></option>
                    <option value="Firefox"></option>
                    <option value="Internet Explorer"></option>
                    <option value="Opera"></option>
                    <option value="Safari"></option>
                    <option value="Microsoft Edge"></option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="StockCount"> </label>
                    <input asp-for="StockCount" class="form-control" id="exampleInputConfirmPassword1" placeholder="Stock Count">
                </div>

                <button  type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>

