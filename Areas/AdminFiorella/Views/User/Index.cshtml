@model IEnumerable<UserVM>

@{ ViewData["Title"] = "Role";
    int userNum = 1; 
    }


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                User
                            </th>
                            <th>
                                User name
                            </th>
                            <th>
                                Full name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Role
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                        <tr>
                            <td class="py-1">
                                <img src="~/admin/images/faces/face1.jpg" alt="image" />
                            </td>
                            <td>
                                @user.Username
                            </td>
                            <td>
                                @user.FullName
                            </td>
                            <td>
                                @user.Email
                            </td>
                            <td>
                                @user.RoleName
                            </td>

                        </tr>}


                    </tbody>
                </table>
                <a class="btn btn-success" asp-area="AdminFiorella" asp-controller="User" asp-action="Create">Add User<i class="mdi mdi-creation"></i></a>
            </div>
        </div>
    </div>
</div>

